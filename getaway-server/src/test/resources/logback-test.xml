<configuration>
    <!-- Консольный аппендер по умолчанию -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Базовый логгер -->
    <root level="WARN">
        <appender-ref ref="CONSOLE" />
    </root>
</configuration>